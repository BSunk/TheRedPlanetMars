<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rover_images"
    android:background="@color/activity_background"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/no_images_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/no_images"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/images_list"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/rover_images_activity_vertical_margin"
            android:paddingLeft="@dimen/rover_images_activity_horizontal_margin"
            android:paddingRight="@dimen/rover_images_activity_horizontal_margin"
            android:paddingTop="@dimen/rover_images_activity_vertical_margin"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>

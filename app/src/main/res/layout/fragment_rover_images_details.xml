<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rover_images_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/activity_background"
    tools:context="com.bsunk.theredplanetmars.roverimagesdetails.RoverImagesDetailsFragment"
    tools:showIn="@layout/activity_rover_images_details">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:onClick="backButtonOnClick"
        android:layout_gravity="top|start" />

    <ImageView
        android:id="@+id/rover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:transitionName="@string/image_transition_string"
        />

</RelativeLayout>
